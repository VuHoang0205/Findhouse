<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/bg_binh_luan"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_binh_luan_1_custom"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/user"
            android:gravity="center"
            android:text="7.0" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_tieu_de_bl_1_custom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nhà trọ cô Bình"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/txt_noi_dung_bl_1_custom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dịa chỉ" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_diem_1_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/bg_ratiing_point"
            android:gravity="center"
            android:padding="2dp"
            android:text="8" />
    </LinearLayout>

    <!--<android.support.v7.widget.RecyclerView-->
    <!--android:id="@+id/rcv_chi_tiet_binh_luan"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>-->
</LinearLayout>

